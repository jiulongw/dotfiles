function +vi-git_status {
  # Check for untracked files or updated submodules since vcs_info does not.
  if [[ -n $(git ls-files --other --exclude-standard 2> /dev/null) ]]; then
    hook_com[unstaged]='%F{red} *%f'
  fi
}

function prompt_minimal_precmd {
  vcs_info
}

# Exclude some huge git repo when checking for changes to avoid prompt lagging.
function is_check_for_change() {
  local d
  local -a nocfc_dirs
  nocfc_dirs=(
    ${HOME}/workspace/source/
  )

  for d in ${nocfc_dirs}; do
    d=${d%/##}
    [[ $PWD == $d(|/*) ]] && return 1
  done

  return 0
}

# For some hosts, do not show hostname in prompt.
function is_show_host_name() {
  local n
  local -a no_name_hosts
  no_name_hosts=(
    Jiulong-rMBP
    tw-mbp-jiulongw
    arch-vm
  )

  for d in ${no_name_hosts}; do
    [[ `hostname` == $d ]] && return 1
  done

  return 0
}

function prompt_minimal_setup {
  setopt LOCAL_OPTIONS
  unsetopt XTRACE KSH_ARRAYS
  prompt_opts=(cr percent subst)

  # Load required functions.
  autoload -Uz add-zsh-hook
  autoload -Uz vcs_info

  # Add hook for calling vcs_info before each command.
  add-zsh-hook precmd prompt_minimal_precmd

  # Set vcs_info parameters.
  zstyle ':vcs_info:*' enable git
  zstyle -e ':vcs_info:*' check-for-changes 'is_check_for_change && reply=(true) || reply=(false)'
  zstyle ':vcs_info:*' stagedstr '%F{green} *%f'
  zstyle ':vcs_info:*' unstagedstr '%F{yellow} *%f'

  zstyle ':vcs_info:*' formats '[%b%c%u]'
  zstyle ':vcs_info:*' actionformats "[%b%c%u|%F{cyan}%a%f]"
  zstyle ':vcs_info:(sv[nk]|bzr):*' branchformat '%b|%F{cyan}%r%f'
  zstyle -e ':vcs_info:git*+set-message:*' hooks 'is_check_for_change && reply=(git_status) || reply=()'

  local h
  if (is_show_host_name); then
    h='%F{cyan}%m%f '
  fi

  # Define prompts.
  PROMPT=$h'%1~ ${vcs_info_msg_0_}$ '
  RPROMPT=''
}

prompt_minimal_setup "$@"

